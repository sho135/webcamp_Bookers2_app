<!--ユーザー情報-->
<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <!--ユーザー情報-->
            <h2>User info</h2>
            <%= render 'users/user', user: @user %>

            <!--エラー通知-->
            <%= render 'books/error', error: @book %>
            <!--本新規投稿フォーム-->
            <h2>New book</h2>
            <%= render 'books/book', book: @book %>
        </div>

        <div class="col-md-8 offset-md-1">
        <!--Books項目:ユーザーと本-->
        <h2>Books</h2>
          <table class="table">
              <tr>
              <th></th>
              <th>Title<th>
              <th>Opinion<th>
              <th colspan="3"></th>
              </tr>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= link_to user_path(book.user) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
                    <% end %>
                  </td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= link_to book.body %></td>
                </tr>
             <% end %>
            </tbody>
           </table>
        </div>
    </div>
</div>

