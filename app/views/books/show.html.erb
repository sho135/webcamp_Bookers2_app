<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <!--ユーザー情報-->
            <h2>User info</h2>
            <%= render 'users/user', user: @user %>
            <!--本新規投稿フォーム-->
            <h2>New book</h2>
            <%= render 'books/book', book: @book %>

        </div>

<div class="col-md-8 offset-md-1">
    <!--本詳細-->
<h2>Book detail</h2>
<table class="table">
    <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %></td>
        <td><%= link_to @user.name, user_path(@user) %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user_id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success btn-sm btn-block" %></td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger btn-sm btn-block"  %></td>
        <% end %>
    </tr>
</table>
</div>
</div>
</div>


