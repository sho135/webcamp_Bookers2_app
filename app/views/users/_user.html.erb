<!--ユーザー情報-->
<table>
    <h2>User info</h2>
    <thead>
    <tr>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
    </tr>
</thead>
<tbody>
    <tr>
        <th>Name</th>
        <th><%= user.name %></th>
    </tr>
    <tr>
        <th>Introduction</th>
        <th><%= user.introduction %></th>
    </tr>
    <tr><%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %></tr>
</tbody>
</table>