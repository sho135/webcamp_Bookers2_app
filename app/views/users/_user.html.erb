<!--ユーザー情報-->
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
<table class="table">

<tbody>
    <tr></tr>
    <tr>
        <th>Name</th>
        <th><%= user.name %></th>
    </tr>
    <tr>
        <th>Introduction</th>
        <th><%= user.introduction %></th>
    </tr>
    <tr>
        <th colspan="2"><%= link_to edit_user_path(user), class: 'btn btn-outline-secondary btn-block fas' do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
        </th>
    </tr>
</tbody>
</table>

