<table>
    <h1>Book detail</h1>

    <%= @books.each do |book| %>
    <tr>
        <td>
            <%= link_to user_path(@user) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
        <% end %>
        </td>
        <td><%= link_to book.title book_path(book.id) %></td>
        <td><%= link_to book.body %></td>
    </tr>
    <% end %>
</table>